                    });

                    if ($(nextele).find("input:checked").length == 0) {
                        $(Parentnode).removeAttr("checked");
                    }
                    if ($(nextele).find("input:checked").length > 0) {
                        $(Parentnode).prop("checked", "checked");
                    }

                }
                else { return; }

            }

        })
